const IMAGE_EXTS = new Set(['.png','.jpg','.jpeg','.gif','.webp']);
const AUDIO_EXTS = new Set(['.mp3','.aac','.wav','.ogg']);

function fileIcon(name) {
  const ext = (name.match(/\.[^.]+$/) || [''])[0].toLowerCase();
  if (VIDEO_EXTS.has(ext)) return 'üé¨';
  if (IMAGE_EXTS.has(ext)) return 'üñº';
  if (AUDIO_EXTS.has(ext)) return 'üéµ';
  if (['.sh','.js','.py','.json'].includes(ext)) return '‚å®';
  if (['.log','.txt','.md'].includes(ext)) return 'üìù';
  return 'üìÑ';
}

